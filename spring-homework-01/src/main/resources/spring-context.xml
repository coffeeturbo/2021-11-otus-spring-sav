<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="ioService" class="ru.otus.spring.service.IOServiceImpl">
    </bean>
    <bean id="csvLoader" class="ru.otus.spring.service.CsvResourceLoaderIml">
    </bean>

    <bean id="questionDao" class="ru.otus.spring.dao.QuestionDaoImpl">
        <constructor-arg name="questionsFile" value="questions.csv"/>
    </bean>

    <bean id="questionService" class="ru.otus.spring.service.QuestionServiceImpl">
        <constructor-arg ref="questionDao" name="dao"/>
        <constructor-arg ref="ioService" name="ioService"/>
        <constructor-arg ref="csvLoader" name="loader"/>
    </bean>

    <bean id="quizService" class="ru.otus.spring.service.QuizServiceImpl">
        <constructor-arg ref="questionService" name="questionService"/>
        <constructor-arg ref="ioService" name="ioService"/>
    </bean>

</beans>
